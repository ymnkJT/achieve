<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
    <div class="container-child col-md-3 col-sm-4 col-xs-6">
      <%= link_to user_path(user.id) do %>
        <div class="prof_img">
          <%= profile_img(user) %>
        </div>
      <% end %>

      <%= user.email %>
      <% unless user == current_user %>
        <%= render 'follow_form', user: user %>
      <% end %>
    </div>
  <% end %>
</div>
